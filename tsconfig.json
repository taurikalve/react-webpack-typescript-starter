{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react-jsx",
    "sourceMap": true,
    "outDir": "./dist/",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
    // SSG
    // "importHelpers": true,
    // "moduleResolution": "node"
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
